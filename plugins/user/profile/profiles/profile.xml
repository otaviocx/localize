<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="profile">
        <fieldset name="profile"
                  label="PLG_USER_PROFILE_SLIDER_LABEL"
        >
            <field
                name="dob"
                type="dob"
                label="PLG_USER_PROFILE_FIELD_DOB_LABEL"
                description="PLG_USER_PROFILE_FIELD_DOB_DESC"
                info="PLG_USER_PROFILE_SPACER_DOB"
                format="%Y-%m-%d"
                filter="server_utc"
            />
            <field
                name="sexo"
                type="list"
                id="sexo"
                description="PLG_USER_PROFILE_FIELD_SEXO_DESC"
                label="PLG_USER_PROFILE_FIELD_SEXO_LABEL"
            >
                <option value="">Selecione o Sexo</option>
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
                <option value="Indefinido">Indefinido</option>
            </field>
            <field
                name="estado"
                type="list"
                id="estado"
                description="PLG_USER_PROFILE_FIELD_ESTADO_DESC"
                label="PLG_USER_PROFILE_FIELD_ESTADO_LABEL"
            >
                <option value="">Selecione o Estado</option> 
                <option value="Acre">Acre</option> 
                <option value="Alagoas">Alagoas</option> 
                <option value="Amazonas">Amazonas</option> 
                <option value="Amapá">Amapá</option> 
                <option value="Bahia">Bahia</option> 
                <option value="Ceará">Ceará</option> 
                <option value="Distrito Federal">Distrito Federal</option> 
                <option value="Espírito Santo">Espírito Santo</option> 
                <option value="Goiás">Goiás</option> 
                <option value="Maranhão">Maranhão</option> 
                <option value="Mato Grosso">Mato Grosso</option> 
                <option value="Mato Grosso do Sul">Mato Grosso do Sul</option> 
                <option value="Minas Gerais">Minas Gerais</option> 
                <option value="Pará">Pará</option> 
                <option value="Paraíba">Paraíba</option> 
                <option value="Paraná">Paraná</option> 
                <option value="Pernambuco">Pernambuco</option> 
                <option value="Piauí">Piauí</option> 
                <option value="Rio de Janeiro">Rio de Janeiro</option> 
                <option value="Rio Grande do Norte">Rio Grande do Norte</option> 
                <option value="Rondônia">Rondônia</option> 
                <option value="Rio Grande do Sul">Rio Grande do Sul</option> 
                <option value="Roraima">Roraima</option> 
                <option value="Santa Catarina">Santa Catarina</option> 
                <option value="Sergipe">Sergipe</option> 
                <option value="São Paulo">São Paulo</option> 
                <option value="Tocantins">Tocantins</option> 
            </field>

            <field
                name="municipio"
                type="text"
                id="municipio"
                description="PLG_USER_PROFILE_FIELD_MUNICIPIO_DESC"
                label="PLG_USER_PROFILE_FIELD_MUNICIPIO_LABEL"
                size="40"
            />
            <field name="telefone1" type="tel"
                
                   label="PLG_USER_PROFILE_FIELD_TELEFONE1_LABEL"
                   description="PLG_USER_PROFILE_FIELD_TELEFONE1_DESC" 
                
                
                   required="true" >
                <group label="">
                    <option value=""></option>
                </group>
            </field> 

            <field name="telefone2" type="tel"
                
                   label="PLG_USER_PROFILE_FIELD_TELEFONE2_LABEL"
                   description="PLG_USER_PROFILE_FIELD_TELEFONE2_DESC" 
                
                
            >
                <group label="">
                    <option value=""></option>
                </group>
            </field>
            <field
                name="renda"
                type="list"
                id="renda"
                description="PLG_USER_PROFILE_FIELD_FAIXA_DESC"
                label="PLG_USER_PROFILE_FIELD_FAIXA_LABEL"
            >
                <option value="">Selecione a faixa de renda mensal</option>
                
                <option value="Classe A">PLG_USER_PROFILE_FIELD_FAIXA_INF_A</option>
                <option value="Classe B">PLG_USER_PROFILE_FIELD_FAIXA_INF_B</option>
                <option value="Classe C">PLG_USER_PROFILE_FIELD_FAIXA_INF_C</option>
                <option value="Classe D">PLG_USER_PROFILE_FIELD_FAIXA_INF_D</option>
                <option value="Classe E">PLG_USER_PROFILE_FIELD_FAIXA_INF_E</option>
            </field>
            <field
                name="cpf"
                type="text"
                id="cpf"
                description="PLG_USER_PROFILE_FIELD_CPF_DESC"
                filter="integer"
                label="PLG_USER_PROFILE_FIELD_CPF_LABEL"
                size="11"
                maxlength="11"
            />
            <field
                name="aboutme"
                type="textarea"
                description="PLG_USER_PROFILE_FIELD_ABOUT_ME_DESC"
                label="PLG_USER_PROFILE_FIELD_ABOUT_ME_LABEL"
                cols="30"
                rows="5"
                filter="safehtml"
            />
            <field name="preferencias" type="tag" label="PLG_USER_PROFILE_FIELD_PREFERENCIAS_LABEL" description="PLG_USER_PROFILE_FIELD_PREFERENCIAS_DESC" mode="ajax" class="inputbox span12 small" multiple="true" />	
            <field
                name="tos"
                type="tos"
                default=""
                label="PLG_USER_PROFILE_FIELD_TOS_LABEL"
                description="PLG_USER_PROFILE_FIELD_TOS_DESC">
                <option value="1">PLG_USER_PROFILE_OPTION_AGREE</option>
                <option value="">JNO</option>
            </field>
        </fieldset>
    </fields>
</form>
